<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_loading"
    tools:context=".ui.rules.RulesActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rules"
        android:layout_width="550dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_rules_bar"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text_rules"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="35dp"
            android:fontFamily="@font/irish_grover"
            android:shadowColor="@color/black"
            android:shadowDx="-7"
            android:shadowDy="-7"
            android:shadowRadius="1"
            android:text="@string/text_rules"
            android:textAlignment="center"
            android:textColor="@color/white_light"
            android:textSize="@dimen/sp16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/button_continue"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_continue"
        android:clickable="true"
        android:contentDescription="@string/button_continue"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/rules"
        app:layout_constraintStart_toStartOf="@+id/rules" />

</androidx.constraintlayout.widget.ConstraintLayout>